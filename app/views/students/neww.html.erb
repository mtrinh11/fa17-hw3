<h2>Student Form</h2>

<%= form_tag students_path do %>
  <%= label_tag(:full_name, "Full name:") %>
  <%= text_field_tag(:full_name, nil, placeholder: @placeholder_name) %>

  <%= label_tag(:year, "Year:") %>
  <%= text_field_tag(:year, nil, placeholder: @placeholder_year) %>

  <%= label_tag(:major, "Major:") %>
  <%= text_field_tag(:major, nil, placeholder: @placeholder_major) %>

  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

  <%= submit_tag("Create Student") %>
<% end %>
